extends base

block content
    if errorMessage 
        span=errorMessage
    form(method="post")
        input(type="hidden",name="id", value=`${user._id}`)
        input(type="hidden",name="oldEmail", value=`${user.email}`)
        input(placeholder="성명", name="name", type="text",value=`${user.name}`,  required)
        input(placeholder="이메일",name="email", type="email",value=`${user.email}`, required)
        input(placeholder="비밀번호",name="password", type="password", value=`${user.password}`, required)
        input(placeholder="비밀번호 확인", name="password2", type="password", value=`${user.password}`, required)
        input(placeholder="색상선택", name="color", type="color", value=`${user.color}`, required)
        select(name="partId")
            option(value="") 선택
            each item in partList
                option(value=`${item._id}`, selected=(`${item._id}` === `${user.department}`)) #{item.name}
        input(type="submit", value="Join")