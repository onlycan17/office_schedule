extends base

block content
    if errorMessage 
        span=errorMessage
    div(class="search")
        div(class="excel")
            button(id="excelBtn" type="button") 엑셀다운로드
        div(class="searchComponent")
            label(for="partId") 부서선택
            select(class="searchSelect" name="partId" id="partId")
                option(value="") 전체
                each item in partList
                    option(value=`${item._id}`) #{item.name}
        div(class="searchComponent")
            label(for="name") 성명
            input(class="searchInput" name="name" id="name" type="text")            
        div(class="searchComponent")
            label(for="email") 이메일
            input(class="searchInput" name="email" id="email" type="text")                    
        div(class="searchDate")
            label(for="email") 날짜검색
            input(class="searchInput inputDatePicker" type="text" id="searchDate" class="form-control daterange")
        div(class="searchButton")
            button(id="searchBtn" type="button") 검색
    table(id="join")

block scripts
    link(rel="stylesheet", href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css")
    link(href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css", rel="stylesheet", type="text/css", media="screen")
    link(href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-daterangepicker/2.1.13/daterangepicker.css", rel="stylesheet", type="text/css", media="screen")
    link(rel="stylesheet", href="/static/css/searchJournal.css")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript")
    script(src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js" type="text/javascript")
    script(src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap4.min.js" type="text/javascript")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js", type="text/javascript")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js", type="text/javascript")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-daterangepicker/2.1.13/daterangepicker.min.js", type="text/javascript")
    script(src="/static/js/searchJournal.js" type="text/javascript") 