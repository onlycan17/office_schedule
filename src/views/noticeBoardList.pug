extends base

block content
    if errorMessage 
        span=errorMessage
    link(rel="stylesheet", href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css")
    link(rel="stylesheet", href="/static/css/searchJournal.css")
    
    input(id="user", type="hidden", value=`${loggedInUser._id}`)
    input(id="department", type="hidden", value=`${loggedInUser.department._id}`)    
    div(class="search")
        div(class="searchComponent")
            label(for="name") 제목
            input(class="searchInput" name="searchTitle" id="searchTitle" type="text")            
        div(class="searchButton")
            button(id="searchBtn" type="button") 검색
    if(loggedInUser.department._id === '612490cc21f010838f50a41b' || loggedInUser.department._id === '6110e83e4d79e34e8bff0e44')        
        div(class="addButton")
            button(class="addBtn" id="addBtn" type="button") 공지사항 등록
    table(id="noticeBoard")
