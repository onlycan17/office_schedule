extends base

block content
    if errorMessage 
        span=errorMessage
    div(id="calendar") 
    input(id="calValue", type="hidden", value=officeRoom)
    input(id="color", type="hidden", value=`${color}`)
    input(id="order", type="hidden", value=`${lastOrder}`)
    input(id="flag", type="hidden", value=`${flag}`)
    input(id="menuName", type="hidden", value=`${menuName}`)
    input(id="user", type="hidden", value=`${loggedInUser._id}`)
    input(id="sessionUserName", type="hidden", value=`${loggedInUser.name}`)
    input(id="department", type="hidden", value=`${loggedInUser.department._id}`)
    div(class="modal" style="display:none")
        div(class="modal-content")
            span(class="close-button") &times;
            h1 사무실 예약신청 입력
            div(class="form")
                div(class="content" id="userNameComponent")
                    label(for="userName") 작성자
                    input(type="text" , id="userName", disabled)
                div(class="content")
                    label(for="title") 예약할 사무실
                    select(name="title" id="title")
                        option(value="회의실(중)") 회의실(중)
                        option(value="회의실(소)") 회의실(소)
                        option(value="릴렉스룸") 릴렉스룸
                        option(value="A홀") A홀
                        option(value="크로마키홀") 크로마키홀
                        option(value="종편실") 종편실
                        option(value="식당홀") 식당홀
                div(class="content")
                    label(for="description") 내용설명
                    input(type="text" , id="description", placeholder="내용 입력")
                //- div(class="content")
                //-     label(for="url") 링크주소
                //-     input(type="text" , id="url")
                div(class="content")
                    button(id="cancel") 취소
                    button(id="submit") 보내기
                    button(id="delete") 삭제              
    //- span #{color}
    span #{officeRoom.title}
block scripts
    script(src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.js" type="text/javascript")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.js" type="text/javascript")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.js" type="text/javascript")
    script(src="https://unpkg.com/popper.js/dist/umd/popper.min.js" type="text/javascript")   
    script(src="https://unpkg.com/tooltip.js/dist/umd/tooltip.min.js" type="text/javascript")
    script(src="/static/js/officeRoom.js" type="text/javascript")
    link(rel="stylesheet", href="/static/css/mainStyle.css")
    link(rel="stylesheet", href="/static/css/schedule.css")
    link(rel="stylesheet", href="/static/css/modal.css")