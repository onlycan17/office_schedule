extends base
include mixins/departments

block content
    if errorMessage 
        span=errorMessage
    form(method="post")
        input(placeholder="부서명", name="name", type="text", required, value=detail.name)
        input(placeholder="순서", name="order", type="number", required, value=detail.order)
        select(name="userId")
            option(value="") 선택
            each item in userList
                option(value=`${item._id}`) #{item.name}_#{item.email}
        input(type="submit", value="저장")    
    ul.list
        each item in detail.user.reverse()
            span #{item.name}
            span #{item.email}
            a(href=`/departmentDetailDelete/${detail._id}/${item._id}`) ❌    