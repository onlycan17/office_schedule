extends base

block content
    if errorMessage 
        span=errorMessage
    link(rel="stylesheet", href="/static/css/board.css")
    div(class="title")    
        h1 #{pageTitle}    
    form(method="post" enctype="multipart/form-data")
        input(type="hidden" value="1" name="boardGroupId")
        select(name="publicYn")
            option(value="Y") 공개
            option(value="N") 비공개
        input(placeholder="제목", name="title", type="text", required)
        textarea(class="ckeditor", name="editor4", cols="30", rows="10")
        input(type="file" name="singleFile")
        input(type="submit", value="등록")

block scripts
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript")
