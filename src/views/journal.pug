extends base

block content
    if errorMessage 
        span=errorMessage
    link(rel="stylesheet", href="/static/css/main.css")
    link(rel="stylesheet", href="/static/css/modal.css")
    link(rel="stylesheet", href="/static/css/sidebar.css")
    link(rel="stylesheet", href="/static/css/ckeditor.css")
    link(rel="stylesheet", href="//code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css")
    
    div(id="calendar") 
    input(id="calValue", type="hidden", value=journal)
    input(id="color", type="hidden", value=`${color}`)
    input(id="order", type="hidden", value=`${lastOrder}`)
    input(id="flag", type="hidden", value=`${flag}`)
    input(id="menuName", type="hidden", value=`${menuName}`)
    input(id="user", type="hidden", value=`${loggedInUser._id}`)
    input(id="userName", type="hidden", value=`${loggedInUser.name}`)
    input(id="department", type="hidden", value=`${loggedInUser.department._id}`)
    menu(style="display:none") 
        div(class="container")
            div(id="close-menu")
                span(class="ion-close-round")
            div(class="sidebarTitle")
                h1(style="color:white") 업무일지
            div(class="box")
                div(class="column")
                        label 작성자
                        input(type="text", id="userNameText", readonly="true")
                div(class="row")
                    div(class="column")
                        label(for="start") 시작날짜 
                        input(type="text", id="start", readonly="true")        
                    div(class="column")
                        label(for="end") 종료날짜 
                        input(type="text", id="end", readonly="true")
                div(id="content" class="editorCK")    
                    textarea(id="ckeditor", name="description")
                div(class="file" id="divFile")
                    label(for="file") 파일첨부
                    input(type="file" , id="singleFile")
                div(id="submitDiv" class="pull-center")
                    button(id="submit", class="btn") 보내기
                div(id="comment", class="commentColumn")    
                div(id="commentTextarea" ,class="row", style="display:none")
                    textarea(name="content", id="content", cols="80", rows="5" required)
                    button(id="commentSaveBtn", class="button") 답변하기
block scripts
    script(src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.js" type="text/javascript")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.js" type="text/javascript")
    script(src="https://unpkg.com/popper.js/dist/umd/popper.min.js" type="text/javascript")   
    script(src="https://unpkg.com/tooltip.js/dist/umd/tooltip.min.js" type="text/javascript")
    //- script(src="https://cdn.ckeditor.com/ckeditor5/12.0.0/classic/ckeditor.js" type="text/javascript")
    //- script(src="/static/js/journal.js" type="text/javascript") 
    script(src="/static/js/journal.js" type="text/javascript") 
    