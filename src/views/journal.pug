extends base

block content
    if errorMessage 
        span=errorMessage
    div(id="calendar") 
    input(id="calValue", type="hidden", value=journal)
    input(id="color", type="hidden", value=`${color}`)
    input(id="order", type="hidden", value=`${lastOrder}`)
    input(id="flag", type="hidden", value=`${flag}`)
    input(id="menuName", type="hidden", value=`${menuName}`)
    input(id="user", type="hidden", value=`${loggedInUser._id}`)
    input(id="userName", type="hidden", value=`${loggedInUser.name}`)
    input(id="department", type="hidden", value=`${loggedInUser.department._id}`)
    menu(style="display:none") 
        div(class="container")
            div(id="close-menu")
                span(class="ion-close-round")
            div(class="title")
                h1(style="color:white") 업무일지    
            div(class="box")
                div(class="row")
                    div(class="column")
                        label(for="start") 시작날짜 
                        input(type="text", id="start", readonly="true")        
                    div(class="column")
                        label(for="end") 종료날짜 
                        input(type="text", id="end", readonly="true")
                div(class="editorCK")    
                    textarea(id="ckeditor", name="description")
                div(class="file")
                    label(for="file") 파일첨부 (서버재기동시 저장파일이 사라지니 임시로 사용해주세요. )
                    input(type="file" , id="singleFile")
                div(id="submitDiv" class="pull-center")
                    button(id="submit", class="btn") 보내기
                div(id="comment", class="commentColumn")    
                div(id="commentTextarea" ,class="row", style="display:none")
                    textarea(name="content", id="content", cols="80", rows="5")
                    button(id="commentSaveBtn", class="button") 답변하기

